<%= form_with model: [:admin, @movie] do |f| %>
  <div>
    <%= f.label :name  %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :year  %>
    <%= f.number_field :year %>
  </div>

  <div>
    <%= f.label :is_showing  %>
    <%= f.select :is_showing, [['上映中',true],['上映予定',false]] %>
  </div>

  <div>
    <%= f.label :description  %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :image_url  %>
    <%= f.text_field :image_url %>
  </div>

  <div>
    <%= f.submit '作成' %>
  </div>

<% end %>