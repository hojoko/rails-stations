<%= form_with model: [:admin, @movie] do |f| %>
  <div>
    <%= f.label :name  %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :year  %>
    <%= f.number_field :year %>
  </div>

  <div>
    <%= f.label :is_showing  %>
    <%= f.select :is_showing, [['上映中', 1],['上映予定', 0]] %>
  </div>

  <div>
    <%= f.label :description  %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :image_url  %>
    <%= f.text_field :image_url %>
  </div>

  <div>
    <%= f.submit '編集' %>
  </div>

<% end %>